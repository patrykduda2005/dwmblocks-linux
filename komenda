bat=`cat /sys/class/power_supply/BAT1/capacity | awk '{print $1}'`; color1=`number=\`echo \"obase=16; $(($bat*255/100))\" | bc\`; [ ${#number} -eq 1 ] && echo \"0$number\" || echo $number`; color2=`number=\`echo \"obase=16; $((255-($bat*255/100)))\" | bc\`; [ ${#number} -eq 1 ] && echo \"0$number\" || echo $number`;echo \"$bat^c#${color2}${color1}00^^r3,0,4,2^^r0,2,10,15^^c#000000^^r1,3,8,$((13 - (13 * $bat / 100)))^^d^^f10^\"
